<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Content</th>
      <th>Raw content</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender.email %></td>
        <td><%= format_emoji_codes message.content %></td>
        <td><pre><%= message.content %></pre></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_conversation_message_path(@conversation) %>
